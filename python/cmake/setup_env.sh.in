#!/bin/bash
# Generated by CMake -- do not edit manually.
# Source this file to configure the environment for HPXPy development.
#
# Usage:
#   source setup_env.sh

HPX_PREFIX="@HPX_PREFIX@"
HPX_LIB_DIR="@_hpx_lib_dir@"
HPXPY_BUILD_DIR="@CMAKE_CURRENT_BINARY_DIR@"
HPXPY_SOURCE_DIR="@CMAKE_CURRENT_SOURCE_DIR@"

# Set library paths so the HPX shared libraries can be found at runtime
if [[ "$OSTYPE" == "darwin"* ]]; then
    export DYLD_LIBRARY_PATH="$HPX_LIB_DIR${DYLD_LIBRARY_PATH:+:$DYLD_LIBRARY_PATH}"
else
    export LD_LIBRARY_PATH="$HPX_LIB_DIR${LD_LIBRARY_PATH:+:$LD_LIBRARY_PATH}"
fi

# Set Python path (build dir for _core.so, source dir for hpxpy/*.py)
export PYTHONPATH="$HPXPY_BUILD_DIR:$HPXPY_SOURCE_DIR${PYTHONPATH:+:$PYTHONPATH}"

echo "HPXPy environment configured"
echo "  HPX prefix: $HPX_PREFIX"
echo "  HPX libs:   $HPX_LIB_DIR"
